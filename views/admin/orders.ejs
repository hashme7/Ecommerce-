                        <a href="#" class="requestfullscreen nav-link btn-icon"><i
                                class="material-icons md-cast"></i></a>
                    </li>

                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-5 me-auto mb-4">
                    <input type="text" id="myInput" placeholder="Search..." class="form-control" />
                </div>
            </div>
            <div class="card mb-4">
                <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <% if (orders.length<1){%>
                            <h3>Order list is Empty</h3>
                            <%}else{%>
                                <table class="table table-hover" id="tablePagination">
                                    <thead>
                                        <tr>
                                            <th>#ID</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Total</th>
                                            <th scope="col">Date</th>
                                            <th scope="col" class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i=0; i< orders.length;i++){%>
                                            <tr>
                                                <td>
                                                    <%=orders[i]._id%>
                                                </td>
                                                <td><b>
                                                        <%= orders[i].user.name %>
                                                    </b></td>
                                                <td>
                                                    <%= orders[i].user.email %>
                                                </td>
                                                <td>
                                                    <%= orders[i].totalAmount %>
                                                </td>
                                                <%if(orders[i].status=="Pending" || orders[i].status=="Shipped"
                                                    ||orders[i].status=="Placed" ||orders[i].status=="Out For Delivery"
                                                    ){%>
                                                    <td><span class="badge rounded-pill bg-success">
                                                            <%=orders[i].status%>
                                                        </span></td>
                                                    <%}else if(orders[i].status=='Return Requested' ){%>
                                                        <td><span class="badge rounded-pill bg-dark">
                                                                <%=orders[i].status%>
                                                            </span></td>
                                                        <%}%>
                                                            <td>
                                                                <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric' ,
                                                                    month: 'long' , day: '2-digit'
                                                                    }).format(orders[i].orderedDate) %>
                                                            </td>
                                                            <td class="text-end">
                                                                <a href="/admin/orderDetails/<%= orders[i]._id%>"
                                                                    class="btn btn-md rounded font-sm">Detail</a>
                                                                <div class="dropdown">
                                                                    <a href="#" data-bs-toggle="dropdown"
                                                                        class="btn btn-light rounded btn-sm font-sm">
                                                                        <i class="material-icons md-more_horiz"></i>
                                                                    </a>
                                                                    <div class="dropdown-menu">
                                                                        <a class="dropdown-item" href="#">View
                                                                            detail</a>
                                                                        <a class="dropdown-item" href="#">Edit
                                                                            info</a>
                                                                        <a class="dropdown-item text-danger"
                                                                            href="#">Delete</a>
                                                                    </div>
                                                                </div>
                                                                <!-- dropdown //end -->
                                                            </td>
                                            </tr>
                                            <%}%>
                                    </tbody>
                                </table>
                                <%}%>
                    </div>
                    <!-- table-responsive //end -->
                </div>
                <!-- card-body end// -->
            </div>
        </section>
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                        document.write(new Date().getFullYear());
                    </script>

                </div>
