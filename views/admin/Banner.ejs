        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            async function updateBanner(id) {
                try {
                    let confirmModal =await swal.fire({
                        title: "Are you sure",
                        icon: 'info',
                    })
                    if (confirmModal.isConfirmed) {
                        let fetchRes = await fetch(`/admin/updateBanner/${id}`, {
                            method: "PATCH"
                        })
                        if (fetchRes) {
                            swal.fire({
                                title:"Done",
                                icon:"success",
                            }).then(()=>{
                                $('#table').load('/admin/banners #table')
                            })
                        }
                    }
                } catch (error) {
                    console.log(error)
                }

            }
        </script>
