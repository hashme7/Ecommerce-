        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banner List</h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <div>
                    <a href="/admin/addBanners" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">

                <!-- card-header end// -->
                <div class="card-body">
                    <table class="table" id="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Target ID</th>
                                <th scope="col">Start Date</th>
                                <th scope="col">Expiry Date</th>
                                <th scope="col">Description</th>
                                <th scope="col">Banner Image</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0 ; i< bannerList.length ; i++){%>
                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%= bannerList[i].name %>
                                    </td>
                                    <td>
                                        <%= bannerList[i].targetId %>
                                    </td>
                                    <td>
                                        <%= bannerList[i].startDate.toDateString() %>
                                    </td>
                                    <td>
                                        <%= bannerList[i].expiryDate.toDateString() %>
                                    </td>
                                    <td>
                                        <%= bannerList[i].description %>
                                    </td>

                                    <td><img src="/bannerImages/<%= bannerList[i].bannerImage %>"
                                            class="img-sm img-thumbnail" alt="Banner Image"></td>
                                    <% if(bannerList[i].isListed){ %>
                                        <td><span class="badge rounded-pill alert-success">Active</span></td>
                                        <%}else{%>
                                            <td><span class="badge rounded-pill alert-danger">inactive</span></td>
                                            <%}%>
                                                <td class="text-sm-end">
                                                    <a href="/admin/editBanner/<%= bannerList[i]._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                                        <i class="material-icons md-edit"></i> Edit
                                                    </a>
                                                    <% if(bannerList[i].isListed){%>
                                                        <button class="badge rounded-pill alert-danger"
                                                            onclick="updateBanner('<%= bannerList[i]._id %>')">
                                                            Unlist
                                                        </button>
                                                        <%}else{%>
                                                            <button class="badge rounded-pill alert-success"
                                                                onclick="updateBanner('<%= bannerList[i]._id %>')">
                                                                List
                                                            </button>
                                                            <%}%>
                                                </td>
                                </tr>
                                <%}%>

                                    <!-- Add more rows for additional data -->
                        </tbody>
                    </table>
                </div>

                <!-- card-body end// -->
            </div>
        </section>
        <!-- content-main end// -->
