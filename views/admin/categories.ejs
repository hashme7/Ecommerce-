                        <a href="#" class="requestfullscreen nav-link btn-icon"><i
                                class="material-icons md-cast"></i></a>
                    </li>
                </ul>
            </div>
         
        </header>
        <div class="d-flex justify-content-center" style="padding-top: 0px;">
            <h3 class="content-title" id="messageDiv" style="color: rgb(17, 97, 70);"></h3>
        </div>
        <section class="content-main"  style="padding-top: 0px;">
            <div class="content-header">
                <h2 class="content-title">category list</h2>
                
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-5 me-auto">
                            <input type="text" id="myInput" placeholder="Search..." class="form-control" />
                        </div>

                        <div class="col-lg-4 col-md-6 me-auto" id="messageBox">
                            <button class="add-button" onclick="formModal()"> Add Category</button>
                        </div>

                    </div>

                </header>
                <!-- card-header end// -->
                <div class="card-body "  >
                    <div class="table-responsive" id="dynamicTable">
                        <table class="table table-hover" id="categoryTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>category name</th>
                                    <th>discription</th>
                                    <th>Status</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0 ;i < categories.length ; i++ ) { %>
                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>
                                        <td id="categoryName">
                                            <%= categories[i].name %>
                                        </td>   
                                        <td>
                                            <%= categories[i].discription %>
                                        </td>
                                        <td id="statusDiv">
                                            <%= categories[i].isBlocked?"unlisted":"listed";%>
                                        </td>
                                        <td class="text-end">
                                            <% if (categories[i].isBlocked){%>
                                                <button class="badge rounded-pill badge-success" 
                                                    onclick="blockAndUnblock('<%= categories[i].name %>','<%= categories[i].isBlocked%>',event)">
                                                    Unblock
                                                </button>
                                                <% }else{%>
                                                    <button class=" badge rounded-pill alert-warning" id="BlockBtn"
                                                        onclick="blockAndUnblock('<%= categories[i].name %>','<%= categories[i].isBlocked%>',event)">
                                                        Block
                                                    </button>
                                                    <%}%>
                                                        <button class="badge rounded-pill alert-warning" 
                                                            onclick="formModal('<%=categories[i]._id%>') ">
                                                            Edit
                                                        </button>
                                        </td>
                                    </tr>
                                    <%}%>
                            </tbody>
                        </table> <!-- table-responsive.// -->
                        <!-- firstModal --- Edit Category -->

                    </div>
                </div>
                <!-- card-body end// -->

            </div>


        </section>
        <div class="form-container" id="formContainer" >
            <h2>Edit Category</h2>
            <h3 id="messageBox"> </h3>
            <form id="editCategoryForm">
                <div class="form-group">
                    <label for="name">Category Name:</label>
                    <input type="text" id="name" name="name" oninput="debouncedValid(event, false)" required>
                    <label for="name" id="messageCatName"></label>
                    <p id="EerorMsCat"></p>
                </div>
                <div class="form-group">
                    <label for="discription">Description:</label>
                    <input type="text" id="discription" name="discription" value="PATCH" required>
                    <p id="EerorMsDis"></p>
                </div>
            </form>
            <button onclick="closeFormModel()">cancel</button>
            <button id="formSubBtn" onclick="editFormsub()" >Update Category</button>
        </div>
        <!-- secondModal-- ADD category -->
        <div class="form-container" id="addCategoryForm">
            <h2>Add Category</h2>
            <h4 id="addMessageBox"></h4>
            <form id="editCategoryForm" >
                <div class="form-group">
                    <label for="name">Category Name:</label>
                    <input type="text" id="AddCatName" name="name" oninput="debouncedValid(event, true)" >
                    <p id="messageP"></p>
                    <p id="erorMsCat"></p>
                </div>
                <div class="form-group">
                    <label for="discription">Description:</label>
                    <input type="text" id="Adddiscription" name="discription" >
                    <p id="erorMsDis"></p>
                </div>
                <button onclick="closeAddModal()">cancel</button>
                <button id="addCatBtn" onclick="addCategory(event)">Add Category</button>
            </form>
        </div>
        <!-- content-main end// -->

    </main>
