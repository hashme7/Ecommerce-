    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#categoryTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        $(document).ready(function () {
            $('#categoryTable').DataTable({
                searching: false,
                lengthChange: false,
                pageLength: 5,
                info:false,
            });
        });

    </script>
