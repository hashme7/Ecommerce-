    <script>
        function readUrl(input) {
            if (input.files && input.files[0]) {
                let reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgdisplay').attr('src', e.target.result).width(200).height(150)
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        document.addEventListener('DOMContentLoaded', function () {
            let startDate = $('#startDate').data('val')
            let endDate = $('#endDate').data('val')
            document.getElementById("startDate").value = new Date(startDate).toISOString().split('T')[0];
            document.getElementById("endDate").value = new Date(endDate).toISOString().split('T')[0];
            const updateBanner = async () => {
                try {
                    const id = document.getElementById('id').value;
                    const formData = new FormData(editBannerForm);
                    const response = await fetch(`/admin/editBanner/${id}`, {
                        method: 'POST',
                        body: formData,
                    });

                    if (response.ok) {
                        Swal.fire('Success!', 'Banner updated successfully', 'success');
                    } else {
                        Swal.fire('Error!', 'Failed to update banner', 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire('Error!', 'Something went wrong', 'error');
                }
            };

            const editBannerForm = document.getElementById('editBanner')
            editBannerForm.addEventListener('submit', function (event) {
                event.preventDefault();

                let valid = true;
                $('#imgError, #endDateError, #startDateError, #targetIdError, #descriptionError1, #nameError').css('display', 'none');

                const name = $('#name').val();
                const description = $('#description').val();
                const targetId = $('#targetId').val();
                const startDate = $('#startDate').val();
                const endDate = $('#endDate').val();
                const img = document.getElementById('imageupload');

                if (!validateName(name)) {
                    $('#nameError').css('display', 'block');
                    valid = false;
                }
                if (!validateDescription(description)) {
                    $('#descriptionError1').css('display', 'block');
                    valid = false;
                }
                if (!validateName(targetId)) {
                    $('#targetIdError').css('display', 'block');
                    valid = false;
                }
                if (!validateDate(startDate)) {
                    $('#startDateError').css('display', 'block');
                    valid = false;
                }
                if (!validateDate(endDate)) {
                    $('#endDateError').css('display', 'block');
                    valid = false;
                }
                if (img.files.length === 0) {
                    $('#imgError').css('display', 'block');
                    valid = false;
                }
                if (valid) {
                    swal.fire({
                        title: 'Are you sure?',
                        text: 'You are about to update the banner!',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, update it!',
                    }).then((result) => {
                        if (result.isConfirmed) {
                            updateBanner();
                        }
                    });
                }

            });
        });
        function validateName(name) {
            var regex = /^[a-zA-Z ]{2,30}$/;
            return regex.test(name);
        }
        function validateDescription(description) {
            var regex = /^[a-zA-Z ]{2,60}$/;
            return regex.test(description)
        }
        function validateDate(date) {
            return !isNaN(new Date(date));
        }
    </script>
