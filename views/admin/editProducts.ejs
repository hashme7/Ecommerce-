        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>
                        <h4 id="update-message" style="display: none;">Update Succesfully</h4>
                        <form method="post" action="/admin/addProducts" id="addForm" enctype="multipart/form-data">
                            <div>
                                <button type="submit" 
                                    class="btn btn-md rounded font-sm hover-up">Publish</button>
                            </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                            <div>
                                <%if(message){%>
                                    <p style="color: red;">
                                        <%=message%>
                                    </p>
                                    <%}%>
                            </div>
                            <div>
                                <p id="mssgeBox"></p>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product Name</label>
                                <input type="text" placeholder="Type here" id="name" name="productName"
                                    class="form-control" id="product_name" value="<%= products.productName%>"/>
                                        <p id="pnameError"> Invalid product name</p> 
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <input type="text" placeholder="Type here" id="discription" name="description"
                                    class="form-control" rows="4" value="<%=products.description%>"></input>
                                    <p id="descriptionError">description is required</p>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Regular price</label>
                                        <div class="row gx-2">
                                            <input placeholder="$" type="number" id="price" class="form-control"
                                                name="price" value="<%= products.price%>"/>
                                                <p id="priceError">Regular price must be a positive number</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">quantity</label>
                                        <div class="row gx-2">
                                            <input placeholder="$" type="number" id="quantity" class="form-control"
                                                name="quantity" value="<%=products.quantity%>"/>
                                            <p id="quantityError">Quantity must be a positive number</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">offer</label>
                                        <input placeholder="$" type="number" id="offer" class="form-control"
                                            name="offer" value="<%=products.offer%>" />
                                        <p id="offerError">Offer must less than the actual price</p>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label class="form-label">Category</label>
                                    <select class="form-select" name="category" >
                                        <%for(let i=0 ; i< category.length; i ++){%>
                                            <option selected="<product.category>">
                                                <%= category[i].CatName %>
                                            </option>
                                            <%}%>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- card end// -->
                    <div class="col-lg-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Media</h4>
                            </div>
                            <div class="card-body ">
