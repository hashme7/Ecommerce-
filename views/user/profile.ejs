                                                                Email: <%= address.email %><br>
                                                                Mobile: <%= address.mobile %><br>
                                                                State: <%= address.state %><br>
                                                                City: <%= address.city %><br>
                                                                House Name: <%= address.houseName %><br>
                                                                Pincode: <%= address.pin %><br>
