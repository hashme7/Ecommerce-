    <!-- Banner -->
    <div class="sec-banner bg0 p-t-50 p-b-20">
        <div class="container">

        </div>
    </div>
    </div>
    <div class="container-fluid" id="productlist">
        <nav aria-label="breadcrumb" class="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#" style="list-style: none; color: black;">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="page">product</li>
            </ol>
        </nav>
        <div class="row pt-5 pb-5 pl-2">
            <div class="col-lg-6 col-md-12 col-12">
                <div class="row">
                    <div class="col-md-4 pt-0">
                        <input type="hidden" class="form-control" name="_id" id="product" value="<%= product._id %>"
                            required>
                        <div class="carousel-indicators- controller-slider">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active slider-butten" aria-current="true" aria-label="Slide 1"
                                style="background-image: url('multerimages/<%= product.images[0]%>'); background-size: cover;"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                class="slider-butten-2" aria-label="Slide 2"
                                style="background-image: url('multerimages/<%= product.images[1]%>');"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                class="slider-butten-3" aria-label="Slide 3"
                                style="background-image: url('multerimages/<%= product.images[2]%>');"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
                                class="slider-butten-4" aria-label="Slide 4"
                                style="background-image: url('multerimages/<%= product.images[3]%>');"></button>
                        </div>
                    </div>
                    <div class="col-md-5 sec-product">
                        <div id="carouselExampleIndicators" class="carousel slide carousel-fade">

                            <div class="carousel-inner">
                                <div class="carousel-item active product-img">
                                    <img src="multerimages/<%= product.images[0]%>" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item product-img">
                                    <img src="multerimages/<%= product.images[1]%>" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item product-img">
                                    <img src="multerimages/<%= product.images[2]%>" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item product-img">
                                    <img src="multerimages/<%= product.images[3]%>" class="d-block w-100" alt="...">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <!-- <div class="col-lg-5 col-md-12 col-12 pt-5 "> -->
                <div class="container-fluid product-sec-1">
                    <h1 class="prodcut-sec-1-h">
                        <%= product.productName%>
                    </h1>
                    <h4 class="prodcut-h-price"><del class="prodcut-h-del-price">
                            MRP:<%= product.price%>.00
                        </del><%=(product.price-product.offer)%>.00 Rs</h4>
                    <div class="pt-4 product-sec-1-p">
                        <p>
                            <%= product.description %>
                        </p>
                    </div>
                    <div class="star pb-3" style="font-size: 15px; border-bottom: 1px solid gray;">
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <%if( product.quantity>0){%>
                                <div class="col-lg-12">
                                    <%if(product.quantity>10){%>
                                        <strong>(in stock)</strong>
                                        <%= product.quantity%>
                                            <% }else{ %>
                                                <strong>(in stock)</strong>
                                                <p>only <%=product.quantity%>left</p>
                                                <%}%>
                                </div>
                                <%}else{%>
                                    <div class="col-lg-6">
                                        <strong style="color: brown;">(out of stock)</strong>
                                    </div>
                                    <%}%>
                        </div>
                    </div>
                    <div class="pb-4">
                        <button type="button" class="btn product-cart-butten" id="AddToCart">Add to cart</button>
                        <button type="button" class="btn product-cart-icon">
                            Add to whishlist
                        </button>
                        <div class="pt-2">
                            <button type="button" class="btn product-buy-butten">Buy Now</button>
                        </div>
                    </div>
                    <div class="product-detils pt-4 ">
                        <div class="row">
                            <p>
                                <%=product.category%>
                            </p>
                            <p>Tags: Hot, Trend</p>
                        </div>
                    </div>
                    <!-- </div> -->
                              
                </div>
            </div>
        </div>
    </div>
    <section>
        <div class="container-fluid">
            <div class="product-sec-2 pt-3 pb-5">
                <h2 class="product-sec-2-h">Description</h2>
                <div class="product-sec-2-p-">
                    <p class="product-sec-2-p">
                        <%= product.description%>
                    </p>
                </div>
            </div>
    </section>
